<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
     {{post.content}}   
    </p>
    <p>Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
  </div>
</div>
{{/each}}